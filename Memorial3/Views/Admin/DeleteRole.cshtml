@using Microsoft.AspNetCore.Identity
@model IdentityRole

<h1>Você vai deletar o role "@Model.Name"</h1>
<h6>Isso não pode ser desfeito depois.</h6>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="mt-3">
    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Delete</button>
    <div class="mt-2">
        <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fa-solid fa-ban"></i> Cancel</a>
    </div>
</form>