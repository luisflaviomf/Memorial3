@model Memorial3.Models.Memorial

@{
    ViewData["Title"] = "Criar seu memorial";
}

<h1>Create</h1>

<h4>Memorial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Historia" class="control-label"></label>
                <textarea asp-for="Historia" class="form-control" cols="40" rows="5"></textarea>
                <span asp-validation-for="Historia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFalecimento" class="control-label"></label>
                <input asp-for="DataFalecimento" class="form-control" />
                <span asp-validation-for="DataFalecimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Formacao" class="control-label"></label>
                <input asp-for="Formacao" class="form-control" />
                <span asp-validation-for="Formacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Religiao" class="control-label"></label>
                <input asp-for="Religiao" class="form-control" />
                <span asp-validation-for="Religiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hobbies" class="control-label"></label>
                <input asp-for="Hobbies" class="form-control" />
                <span asp-validation-for="Hobbies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemorialPictureURL" class="control-label"></label>
                <input asp-for="MemorialPictureURL" class="form-control" />
                <span asp-validation-for="MemorialPictureURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coletivo" class="control-label"></label>
                <input asp-for="Coletivo" class="form-control" />
                <span asp-validation-for="Coletivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Store" asp-action="Index" class="btn btn-warning">
        <i class="fas fa-arrow-left"></i> Voltar para Página Inicial
    </a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
