@model IEnumerable<Memorial3.Models.Memorial>

@{
    ViewData["Title"] = "Memoriais";
}

<h2 class="my-4">Memoriais</h2>


<form asp-action="Index" class="col-2 my-1 p-2">
    <div>
        Procurar
        <div class="my-1">
            <input type="text" name="searchString" placeholder="Nome do memorial" class="form-control-sm col-12" />
        </div>
        <input type="submit" value="Procurar" class="btn btn-primary btn-sm"/>
        <a asp-action="Index" class="btn btn-secondary btn-sm float-right">Limpar</a>
    </div>
</form>

<div class="row">
    @foreach(var memorial in Model)
    {
        <div class="col-3">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@memorial.Id">
                    <img src="@memorial.MemorialPictureURL" class="card-img-top card-img-custom"/>
                    <div class="card-body" style="height: 6em;">
                        <h5 class="mb-3">@memorial.Name</h5>
                    </div>
                    <div class="card-body">
                        <span class="card-text">@memorial.DataFalecimento</span>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@memorial.Id" class="btn btn-primary float-right store-btn"><i class="fa-solid fa-info"></i></a>
                    </div>
                </a>
            </div>
        </div>
    }
</div>